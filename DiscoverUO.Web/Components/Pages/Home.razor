@inject HttpClient client

@page "/"

<PageTitle>DiscoverUO Home</PageTitle>

<MudContainer>
    <MudPaper >
        <MudItem xs="16" Class="mt-4 pa-4 mud-theme-primary">
            <MudCard>
                <MudCardMedia Height="600" Image="/images/DiscoverUO-BG.jfif" />
                <MudCardContent>
                    <MudText Typo="Typo.h2" Align="Align.Center" Color="Color.Inherit" GutterBottom="true">Welcome to DiscoverUO!</MudText>
                    <MudText InLine="true" Typo="Typo.body2" Align="Align.Justify" Color="Color.Inherit" GutterBottom="true">
                        DiscoverUO is a public server listing website designed for the average UO player.
                    </MudText>
                    <MudText Inline="true" Typo="Typo.body2" Align="Align.Justify" Color="Color.Inherit" GutterBottom="true">
                        We aim to provide a simple way to view and share player ran Ultima Online servers.
                    </MudText>
                    <MudText Inline="true" Typo="Typo.body2" Align="Align.Justify" Color="Color.Inherit" GutterBottom="true">
                        You can either browse the public serverlist anonymously, or register a user to access additional features. 
                    </MudText>
                    <MudText Typo="Typo.h6" Align="Align.Center" Color="Color.Inherit" GutterBottom="true">
                        Please review our Terms Of Use <MudLink Color="Color.Inherit" Href="/terms" Target="_blank">HERE</MudLink> before registering.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudPaper>
</MudContainer>
