@using System.Net.Http.Headers;
@using DiscoverUO.Lib.Shared
@using DiscoverUO.Lib.Shared.Contracts
@using DiscoverUO.Lib.Shared.Favorites
@using DiscoverUO.Web.Components.Controls.Favorites
@using Blazored.LocalStorage
@using System.Net
@inject ILocalStorageService localStorage
@inject HttpClient client
@inject NavigationManager navManager
@page "/myfavorites"

<PageTitle>Favorites</PageTitle>

<MudContainer>
    @if (UserSession.UserFavorites != null)
    {
        <FavoritesListComponent Favorites="@UserSession.UserFavorites" />
    }
</MudContainer>
@code {
    protected override void OnInitialized()
    {
        base.OnInitialized();

        UserSession.UpdateFavoritesData(client);
    }
    [CascadingParameter]
    public SessionManager UserSession { get; set; }

}