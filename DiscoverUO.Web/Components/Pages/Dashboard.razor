@page "/dashboard"
@using DiscoverUO.Lib.Shared
@using DiscoverUO.Lib.Shared.Users
@using DiscoverUO.Web.Components.Data
@using System.Net.Http.Headers
@inject ILocalStorageService _localStorage
@inject HttpClient _client

<PageTitle>Dashboard</PageTitle>

<MudContainer Class="flex-shrink-1 py-8 mud-theme-primary" MaxWidth="MaxWidth.False">
    <MudItem xs="12" sm="6" md="4">
        <MudPaper Elevation="1" Class="flex-shrink-1 py-8 mud-theme-primary" Width="250px" Height="100px" Outlined="true" Square="true">
            This is where the dashboard will be!
        </MudPaper>
    </MudItem>
</MudContainer>

@code
{
    public DashboardRequest DashboardData { get; set; }

    protected async override Task OnInitializedAsync()
    {
        DashboardData = await DataManager.GetDashboard(_client, _localStorage);
        StateHasChanged();
    }
}