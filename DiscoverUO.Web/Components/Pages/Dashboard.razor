@page "/dashboard"
@using DiscoverUO.Lib.Shared
@using DiscoverUO.Lib.Shared.Users
@using DiscoverUO.Web.Components.Data
@using System.Net.Http.Headers
@inject ILocalStorageService _localStorage
@inject HttpClient _client

<PageTitle>Dashboard</PageTitle>

<MudContainer Class="mt-16 px-8" Fixed="true">
    <MudGrid>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class=" flex-shrink-1 py-8 mud-theme-primary" Width="900px" Height="200px"Outlined="true" Square="true">
                <div Style="font-family: Courier New, Courier, monospace;font-size: 32px">Welcome back, @DashboardData?.Username!</div>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code
{
    public string ErrorMessage { get; set; }
    public bool ShowErrorMessage { get; set; }
    public DashboardRequest DashboardData { get; set; }

    protected async override Task OnInitializedAsync()
    {
        DashboardData = await DataManager.GetDashboard(_client, _localStorage);
        StateHasChanged();
    }
}