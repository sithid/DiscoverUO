@inject NavigationManager navManager
@inject ISnackbar snackbar

@page "/users/update_password"

<PageTitle>Update User Password</PageTitle>

@if (UserSession.UserAuthenticated)
{
    <MudContainer>
        <UpdateUserPasswordComponent />
    </MudContainer>
}
else
{
    snackbar.Add("You must be logged in update your password.", Severity.Error);
    navManager.NavigateTo("/signin");
}

@code
{
    [CascadingParameter]
    public SessionManager UserSession { get; set; }

}