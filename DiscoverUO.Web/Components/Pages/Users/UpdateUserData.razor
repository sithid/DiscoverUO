@inject NavigationManager navManager
@inject ISnackbar snackbar

@page "/users/update_profile"

<PageTitle>Update User Profile</PageTitle>

@if (UserSession.UserAuthenticated)
{
    <MudContainer>
        <UpdateUserComponent />
    </MudContainer>
}
else
{
    snackbar.Add("You must be logged in update your information.", Severity.Error);
    navManager.NavigateTo("/signin");
}

@code
{
    [CascadingParameter]
    public SessionManager UserSession { get; set; }

}