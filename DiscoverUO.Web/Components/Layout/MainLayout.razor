@using Blazored.LocalStorage
@using System.Net
@inherits LayoutComponentBase
@inject ILocalStorageService _localStorage
@inject HttpClient _client
@inject NavigationManager _navManager

<MudThemeProvider Theme="UOTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />


<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@DrawerToggle" />
        <MudText Typo="Typo.h5" Class="ml-3">DiscoverUO</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Dashboard" Color="Color.Inherit" Edge="Edge.End" OnClick="@AppBarNavToSignIn" />
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu DashboardData="DashboardData"/>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code
{
    public DashboardData DashboardData { get; set; }

    protected async override Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
        {
            if (DashboardData != null)
                return;

            DashboardData = await DataManager.GetDashboard(_client, _localStorage);
            StateHasChanged();
        }
    }
    public bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    void AppBarNavToSignIn()
    {
        _navManager.NavigateTo("/signin");
    }

    MudTheme UOTheme = new MudTheme()
        {
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "Courier New" },
                }
            },

            PaletteLight = new PaletteLight
            {
                Primary = "#606060", // Darker gray
                TextPrimary = "#202020", //
                Secondary = "#bdad84", // Goldish border contrast
                TextSecondary = "#808080", //
                Background = "#bebdbc", // Darker background
                BackgroundGray = "#404040", // Darker gray background
                AppbarBackground = "#606060" // Darker gray
            },


            LayoutProperties = new LayoutProperties()
            {
                DrawerWidthLeft = "150px",
                DrawerWidthRight = "150px",
                AppbarHeight = "80px"
            }
        };
}