@using Blazored.LocalStorage
@using System.Net
@inherits LayoutComponentBase
@inject ILocalStorageService _localStorage
@inject HttpClient _client
@inject NavigationManager _navManager

<MudThemeProvider Theme="UOTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />


<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">DiscoverUO</MudText>"
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Dashboard" Color="Color.Inherit" Edge="Edge.End" OnClick="@((e) => AppBarNavToSignIn())" />
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu DashboardData="DashboardData"/>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code
{
    public DashboardRequest DashboardData { get; set; }

    protected async override Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
        {
            DashboardData = await DataManager.GetDashboard(_client, _localStorage);
            StateHasChanged();
        }
    }
    public bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    void AppBarNavToSignIn()
    {
        _navManager.NavigateTo("/signin");
    }

    MudTheme UOTheme = new MudTheme()
        {
            PaletteLight = new PaletteLight()
            {
                
                Primary = Colors.Gray.Default,
                PrimaryLighten = Colors.Gray.Lighten2,
                PrimaryDarken = Colors.Gray.Darken2,
                PrimaryContrastText = Colors.Brown.Default,
                Secondary = Colors.Brown.Default,
                SecondaryLighten = Colors.Brown.Lighten2,
                SecondaryDarken = Colors.Brown.Darken2,
                SecondaryContrastText = Colors.Gray.Default,
                AppbarBackground = Colors.Gray.Darken4,
            },

            LayoutProperties = new LayoutProperties()
            {
                DrawerWidthLeft = "200px",
                DrawerWidthRight = "200px",
                AppbarHeight = "100px"
            }
        };
}