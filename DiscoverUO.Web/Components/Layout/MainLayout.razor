@inherits LayoutComponentBase

<MudThemeProvider Theme="UOTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        DiscoverUO
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    public bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    MudTheme UOTheme = new MudTheme()
        {
            PaletteLight = new PaletteLight()
            {
                
                Primary = Colors.Gray.Default,
                PrimaryLighten = Colors.Gray.Lighten2,
                PrimaryDarken = Colors.Gray.Darken2,
                PrimaryContrastText = Colors.Gray.Darken4,
                TextPrimary = Colors.Gray.Lighten5,
                Secondary = Colors.Brown.Darken2,
                SecondaryLighten = Colors.Brown.Default,
                SecondaryDarken = Colors.Brown.Darken4,
                SecondaryContrastText = Colors.Gray.Lighten5,
                TextSecondary = Colors.Gray.Darken1,
                AppbarBackground = Colors.Gray.Darken2,
            },

            LayoutProperties = new LayoutProperties()
            {
                DrawerWidthLeft = "200px",
                DrawerWidthRight = "200px",
                AppbarHeight = "100px"
            }
        };
}