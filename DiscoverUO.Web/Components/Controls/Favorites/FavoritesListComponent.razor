@using System.Text.RegularExpressions
@using System.ComponentModel.DataAnnotations
@using DiscoverUO.Lib.Shared

@if( Favorites != null )
{
    if( Favorites.FavoritedItems != null )
    {
        foreach( FavoriteItemData data in Favorites.FavoritedItems )
        {
            <FavoritesListItemComponent ItemData="@data" />
        }
    }
    else
    {
        <MudAlert Severity="Severity.Warning">Your favorites list is empty.</MudAlert>
    }
}

@code {

    [Parameter]
    public FavoritesData Favorites{ get; set; }
}
